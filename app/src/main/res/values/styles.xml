<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="custom_button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>
    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <!-- Barra de Progreso -->
    <style name="steps_custom">
        <item name="sv_doneCircleColor">@color/colorAccent</item>
        <item name="sv_doneCircleRadius">18dp</item>
        <item name="sv_doneStepLineColor">@color/colorPrimaryDark</item>
        <item name="sv_doneStepMarkColor">@color/colorPrimary</item>
        <item name="sv_doneTextColor">@color/colorPrimary</item>
        <item name="sv_nextStepLineColor">@color/colorPrimaryDark</item>
        <item name="sv_nextTextColor">@color/colorPrimaryDark</item>
        <item name="sv_selectedCircleRadius">12dp</item>
        <item name="sv_selectedStepNumberColor">@color/colorPrimary</item>
        <item name="sv_selectedTextColor">@color/colorPrimary</item>
        <item name="sv_stepLineWidth">4dp</item>
        <item name="sv_stepNumberTextSize">18sp</item>
    </style>

    <style name="botones_barra_progreso">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>

