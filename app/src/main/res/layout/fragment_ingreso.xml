<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.lista_solicitudes.Ingreso">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center|top"
        android:orientation="vertical">


        <EditText
            android:id="@+id/txt_ingreso_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:textSize="14sp"
            android:inputType="textPersonName"
            android:hint="Ingresar nombre" />

        <EditText
            android:id="@+id/txt_ingreso_tempIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:textSize="14sp"
            android:inputType="number"
            android:hint="Temperatura de entrada" />


        <EditText
            android:id="@+id/txt_ingreso_horaIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:textSize="14sp"
            android:inputType="textPersonName"
            android:hint="Hora de entrada" />


        <EditText
            android:id="@+id/txt_ingreso_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:textSize="14sp"
            android:inputType="textPersonName"
            android:hint="Lugar" />

        <EditText
            android:id="@+id/txt_ingreso_tempOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:textSize="14sp"
            android:inputType="number"
            android:hint="Temperatura de salida" />

        <EditText
            android:id="@+id/txt_ingreso_horaOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:textSize="14sp"
            android:inputType="textPersonName"
            android:hint="Hora de salida" />

        <Button
            android:id="@+id/buttoniii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            style="@style/custom_button"
            android:text="Guardar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <TableLayout
                    android:id="@+id/table_ingreso"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                </TableLayout>
            </HorizontalScrollView>

        </ScrollView>
    </LinearLayout>

</FrameLayout>