<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/style_solicitud_ingreso"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_verde_udea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="UNIVERSIDAD DE ANTIOQUIA"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SISTEMA DE GESTION DE SEGURIDAD Y SALUD EN EL TRABAJO"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DECLARACION DE RESPONSABILIDAD DE CUMPLIMINETO DE MEDIDAS DE PREVENCIÓN ANTE EMERGENCIA SANITARIA DEL COVID 19"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_titulo"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Fecha:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15/02/2020" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Área:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="___________" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_fecha"
        android:orientation="horizontal">

        <TableRow>

            <TextView
                android:id="@+id/txt_yo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Yo, " />

            <TextView
                android:id="@+id/input_nombre_usuario"
                android:layout_toRightOf="@+id/txt_yo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="................, " />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txt_cedula"
                android:layout_toRightOf="@+id/txt_yo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="identificada con cédula" />

            <TextView
                android:id="@+id/input_cedula"
                android:layout_toRightOf="@+id/txt_cedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= " ................," />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="declaro que recibí la debida información respecto a las medidas de prevención que debo llevar a cabo para prevenir
el contagio con el virus causante del sindrome respiratorio agudo, en el ingreso autorizado, es así que asumo el compromiso con el cumplimiento de las medidas preventivas que me fueron enviadas en
relación con protocolos de desinfección, autocuidado, uso de elementos de protección personal." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Declaro que he leído y entendido el protocolo que me fué enviado." />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Aprobación Colaborador" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Aprobación Jefe inmediato" />

    </LinearLayout>

</LinearLayout>
