<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="role"
            type="co.edu.udea.udeacov.network.response.RoleResponseDto" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_margin="10dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_id"
                style="@style/card_layout">

                <TextView
                    android:id="@+id/txt_id_key"
                    style="@style/card_txt_key"
                    android:text="@{role.displayName}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_nombre"
                style="@style/card_layout">

                <TextView
                    android:id="@+id/txt_nombre_key"
                    style="@style/card_txt_key"
                    android:text="Motivo:" />

                <EditText
                    android:id="@+id/txt_motivo"
                    style="@style/card_txt_value"
                    android:autofillHints=""
                    android:editable="true"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cedula"
                style="@style/card_layout">

                <CheckBox
                    android:id="@+id/chk_approved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Aprobado"/>

            </LinearLayout>




            <Button
                android:id="@+id/btn_approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:drawableStart="@drawable/ic_declaracion"
                style="@style/custom_button"
                android:text="Guardar" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>

