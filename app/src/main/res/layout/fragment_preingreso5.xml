<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preingreso1">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/preingreso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center|top"
            android:orientation="vertical">>

            <TextView
                android:id="@+id/preingreso_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condiciones de los convivientes"
                android:textColor="#DD000000"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/preingreso_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información de convivientes"
                android:textColor="#DD000000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/preingreso_textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personas (adultas, adolescentes o niños) que viven en la misma residencia en la cual usted permanece sean o no familiares"
                android:textSize="13sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Las personas con las que convives tienen alguna de las siguientes características? " />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son mayores de 60 años pero menores de 70 años." />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son mayores de 70 años." />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son personas con preexistencias como Diabetes, Enfermedad cardiovascular, Hipertensión arterial, Accidente Cerebrovascular , VIH, Cáncer, Uso de corticoides o inmunosupresores, EPOC , obesidad , desnutrición, fumadores." />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son personas que trabajan en el sector salud (clínicas u hospitales)" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son niños a mi cuidado exclusivo (niños de 0 a 12 años)" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son adolescentes a mi cuidado exclusivo (de 12 a 18 años)" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son otras personas a mi cuidado exclusivo que no pueden valerse por sí mismas." />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son mujeres en embarazo." />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son mujeres que tuvieron su hijo hace 6 semanas o menos." />

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ninguna de las anteriores" />

            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Otro" />






            <Button
                android:id="@+id/preingresobtn_siguiente5"
                style="@style/custom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Siguiente" />


        </LinearLayout>
    </ScrollView>


</FrameLayout>