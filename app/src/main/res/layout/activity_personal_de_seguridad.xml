<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".activities.porteria.PersonalDeSeguridad">

    <TextView
        android:id="@+id/indicaciones_porteria_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa el nÃºmero de documento del usuario que desea ingresar:"/>

    <EditText
        android:id="@+id/filtro_cedula_valor"
        android:layout_below="@+id/indicaciones_porteria_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sin puntos, ni comas"/>


    <Button
        android:id="@+id/btnBuscarDoc"
        style="@style/botones_barra_progreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filtro_cedula_valor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="8dp"
        android:text="Buscar" />

    <Button
        android:id="@+id/btn_verTablaRegistros"
        style="@style/botones_barra_progreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filtro_cedula_valor"
        android:layout_alignBaseline="@id/btnBuscarDoc"
        android:layout_centerInParent="true"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btnBuscarDoc"
        android:text="Ver tabla" />


</RelativeLayout>