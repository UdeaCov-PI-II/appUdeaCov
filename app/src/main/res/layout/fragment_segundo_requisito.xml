<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/background_light"
    android:layout_margin="10dp"
    tools:context=".fragmentos.solicitud_permiso.SegundoRequisitoFragment"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_medellinMeCuida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link de MedellÃ­n Me Cuida. "
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enlace"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Instrucciones Medellin Me Cuida"
        app:srcCompat="@drawable/medellinmecuida" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/descripcion_medellin_mecuida"
        android:gravity="center"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btn_enviarMedellinMeCuida"
        style="@style/botones_barra_progreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_adjuntar_archivo_24"
        android:text="@string/subir_documento"
        android:textAllCaps="false"
        android:layout_gravity="center|center_vertical" />


</LinearLayout>